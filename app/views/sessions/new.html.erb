<div class="position-absolute top-50 start-50 translate-middle">
  <div class="card text-bg-light mb-2 " style="width: 25rem;padding: 10px">
    <%= form_with url: login_path, scope: :user do |form| %>
      <div class="input-group input-group mb-3">
        <span class="input-group-text" id="inputGroup-sizing-sm" style="width: 100px">Email</span>
        <%= form.email_field :email, required: true, class: "form-control" %>
      </div>
      <div class="input-group input-group mb-3">
        <span class="input-group-text" id="inputGroup-sizing-sm" style="width: 100px">Password</span>
        <%= form.password_field :password, required: true, class: "form-control" %>
      </div>
      <div>
        <%= form.label :remember_me %>
        <%= form.check_box :remember_me %>
      </div>
      <div class="position-absolute bottom-0 end-0" style="margin: 10px">
        <%= form.submit "Sign In", class: "btn btn-primary btn-sm" %>
      </div>
    <% end %>
  </div>
</div>